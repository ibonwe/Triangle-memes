#include <iostream>

using namespace std;
/**
/**
 * The purpose of this function is to generate a right-angled triangle
 * with head facing to the left.
 * @param char character A triangle character
 * @param int  height    A triangle height
 */
void drawLeft(char & character, int & height)
{
    for (int i = 0; i <=height; i++) {

        for (int m = 0;m<=i; m++) {
                cout << " ";

        }
        for (int j = height; j > i; j--) {
                cout << character;
        }cout << endl;
    }
}
